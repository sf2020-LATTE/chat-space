.Side-bar
  .Side-bar__user-name
    .Top-items
      .Top-items__name
        = current_user.name
      .Top-items__icons
        = link_to new_group_path, class: "Top-items__icons--edit" do
          = icon("far", "edit")
        = link_to edit_user_path(current_user), class: "Top-items__icons--cog" do
          = icon("fas", "cog")
  .Side-bar__group-list
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group), class: "Group" do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message